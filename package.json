{
  "name": "filmeet",
  "version": "1.0.0",
  "description": "Site de eventos relacionados a filmes utilizando a estrutura MVC em JavaScript com PostgreSQL e testes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon app.js\" \"postcss public/css/tailwind.css -o public/css/style.css --watch\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "init-db": "node scripts/runSQLScript.js",
    "tailwind:css": "postcss public/css/tailwind.css -o public/css/style.css --watch"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "pg": "^8.7.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "jest": "^27.0.6",
    "nodemon": "^3.1.10",
    "supertest": "^6.1.3",
    "tailwindcss": "^3.4.17"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
